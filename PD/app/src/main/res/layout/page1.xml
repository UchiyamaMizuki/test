<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mizuki.uchiyama.kit.pd.page1">

    <Button
        android:id="@+id/page1_menu"
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/maru"
        android:text="modoru"
        android:textColor="#000000"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="金沢工業大学"
        android:textColor="#000000"
        android:textSize="35pt"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/kit"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="「教育付加価値日本一の大学」を目指し、\n入学時と卒業時の力の差を
        重要視していることから、課題が多い大学としても有名である。また、その成果が評価
        され地方にありながらも常に高い就職率を維持していることでも有名である。
        \n住所: 石川県野々市市扇が丘７−１"
        android:textColor="#000000"
        android:textSize="20pt" />


</RelativeLayout>