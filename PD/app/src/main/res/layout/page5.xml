<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mizuki.uchiyama.kit.pd.page5">

    <Button
        android:id="@+id/page5_menu"
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/maru"
        android:text="modoru"
        android:textColor="#000000"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="カレーのチャンピオン本店"
        android:textColor="#000000"
        android:textSize="35pt"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/page5_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="670dp"
        android:layout_marginStart="670dp"
        android:src="@drawable/tyankare" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginTop="90dp"
        android:text="
        \n住所: 石川県野々市市高橋町20−17"
        android:textColor="#000000"
        android:textSize="20pt" />


</RelativeLayout>